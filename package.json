{
  "name": "asd-dashboard",
  "version": "0.1.0",
  "description": "ASD Dashboard is a pure VanillaJS Progressive Web APP (PWA) designed for managing remote services through widgets displayed in iframes. The dashboard allows users to add, resize, reorder, and configure widgets dynamically, with all user preferences stored in localStorage to ensure persistence across sessions.",
  "main": "serve.js",
  "repository": "git@github.com:kelvin-id/asd-dashboard.git",
  "author": "contact@kelvin.id",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "postinstall": "husky",
    "start": "python3 -m http.server 8000 --directory src",
    "build": "mkdir -p dist && cp *.js *.css *.html dist/",
    "deploy": "npm run build",
    "lint": "npx standard",
    "lint-fix": "npx standard --fix",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:report": "playwright test --reporter=html",
    "merge-videos": "NODE_PATH=$(npm root -g) node scripts/mergePlaywrightVideos.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.2",
    "@types/node": "^22.7.4",
    "husky": "^9.1.6",
    "playwright": "^1.47.2",
    "standard": "*"
  },
  "standard": {
    "globals": [
      "document",
      "window",
      "navigator",
      "console",
      "alert",
      "confirm",
      "prompt",
      "localStorage",
      "location",
      "getComputedStyle",
      "caches"
    ]
  }
}
